
@model Topic

<h3>@Model.Title</h3>
@foreach(var post in ViewBag.Posts)
{
    <div class="card">
        <div class="card-header row">
            <div class="p-0 pl-sm-3 pl-md-0 pr-sm-4">
                <p >@post.UserName</p>
            </div>
            <div class="ol-4 ml-auto mr-3 ">
                <a class="col-2">Відповісти</a>
            </div>
        </div>
        <div class="card-body">
            <p>@post.Content</p>
        </div>
        <div class="card-footer">
            <p>@post.CreatedDate</p>
        </div>
    </div>
    <br />
}


<form class="card" action="/Topic/AddPost/@Model.Id"> 
    <div class="card-body">
        <div>
            <input type="text" name="Post.Content" class="form-control"/>
        </div>
        <input type="submit"/>
    </div>
</form>